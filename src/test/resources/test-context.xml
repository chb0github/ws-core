<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!--just verify there are no un-resolvable dependencies-->
    <bean class="org.bongiorno.ws.core.context.QueryablePropertyPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>classpath:ws-core.properties</value>
            </list>
        </property>
    </bean>

    <import resource="http-header-beans.xml"/>
    <import resource="rest-core-context.xml"/>

</beans>